{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters",
    "Issuer": "LeanCodeGen",
    "Audience": "LeanCodeGen.WebApi",
    "ExpiresInMinutes": 60
  },
  "SecuritySettings": {
    "EnableAntiforgery": true,
    "EnableRateLimit": true,
    "EnableSqlInjection": true,
    "Antiforgery": {
      "HeaderName": "X-XSRF-TOKEN",
      "CookieName": "XSRF-TOKEN"
    },
    "RateLimit": {
      "DefaultRateLimit": {
        "Seconds": 60,
        "MaxRequests": 100
      },
      "IpRateLimit": {
        "Seconds": 1,
        "MaxRequests": 10
      },
      "UserRateLimit": {
        "Seconds": 60,
        "MaxRequests": 1000
      },
      "EndpointRateLimits": {
        "/api/auth/login": {
          "Seconds": 60,
          "MaxRequests": 5
        },
        "/api/sms/send": {
          "Seconds": 60,
          "MaxRequests": 1
        }
      },
      "IpWhitelist": [
        "127.0.0.1",
        "::1"
      ],
      "UserWhitelist": [
        "admin",
        "system"
      ]
    },
    "SqlInjection": {
      "BlockedKeywords": [
        "select",
        "insert",
        "update",
        "delete",
        "drop",
        "truncate",
        "exec",
        "declare",
        "union",
        "create",
        "alter"
      ]
    }
  }
}