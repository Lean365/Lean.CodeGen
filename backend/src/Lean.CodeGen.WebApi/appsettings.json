{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "Origins": [
      "http://localhost:5153",
      "https://localhost:7153"
    ],
    "AllowCredentials": true
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5152"
      },
      "Https": {
        "Url": "https://localhost:7152"
      }
    }
  },
  "Database": {
    "DbType": 1,
    "ConnectionString": "Server=.;Database=LeanCodeGen_Dev;User Id=sa;Password=Tac26901333.;MultipleActiveResultSets=true;TrustServerCertificate=true;",
    "EnableUnderLine": true,
    "EnableSqlLog": true,
    "EnableAutoMigrate": false,
    "EnableInitData": false
  },
  "Cache": {
    "DefaultExpiration": "01:00:00",
    "EnableRedis": false,
    "KeyPrefix": "lean:",
    "EnableStats": true,
    "EnableCompression": true,
    "CompressionThreshold": 1024,
    "Redis": {
      "ConnectionString": "localhost:6379",
      "Database": 0,
      "PoolSize": 50,
      "ConnectionTimeout": 5000,
      "OperationTimeout": 1000,
      "RetryCount": 3,
      "RetryInterval": 1000,
      "EnableSsl": false,
      "Password": "",
      "AllowAdmin": false,
      "EnableCluster": false
    },
    "Memory": {
      "SizeLimit": 1024,
      "CompactionPercentage": 0.05,
      "ExpirationScanFrequency": 60,
      "EnableSlidingExpiration": true,
      "SlidingExpiration": "00:30:00"
    }
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters",
    "Issuer": "LeanCodeGen",
    "Audience": "LeanCodeGen.WebApi",
    "ExpiresInMinutes": 60
  },
  "Security": {
    "EnableAntiforgery": true,
    "EnableRateLimit": true,
    "EnableSqlInjection": true,
    "DefaultPassword": "123456",
    "Antiforgery": {
      "HeaderName": "X-XSRF-TOKEN",
      "CookieName": "XSRF-TOKEN"
    },
    "RateLimit": {
      "DefaultRateLimit": {
        "Seconds": 60,
        "MaxRequests": 100
      },
      "IpRateLimit": {
        "Seconds": 1,
        "MaxRequests": 10
      },
      "UserRateLimit": {
        "Seconds": 60,
        "MaxRequests": 1000
      },
      "EndpointRateLimits": {
        "/api/auth/login": {
          "Seconds": 60,
          "MaxRequests": 5
        },
        "/api/sms/send": {
          "Seconds": 60,
          "MaxRequests": 1
        }
      },
      "IpWhitelist": [
        "127.0.0.1",
        "::1"
      ],
      "UserWhitelist": [
        "admin",
        "system"
      ]
    },
    "SqlInjection": {
      "BlockedKeywords": [
        "select",
        "insert",
        "update",
        "delete",
        "drop",
        "truncate",
        "exec",
        "execute"
      ]
    }
  },
  "LocalizationSettings": {
    "DefaultLanguage": "zh-CN",
    "SystemLanguage": "zh-CN",
    "EnableAutoDetectLanguage": true,
    "EnableLanguageCookie": true,
    "LanguageCookieName": "lang",
    "LanguageCookieExpireDays": 30
  },
  "SliderCaptcha": {
    "ImageCacheDir": "images/slider/background",
    "ExpirySeconds": 60,
    "Source": {
      "Type": "Picsum",
      "AccessKey": "",
      "UrlTemplate": "https://picsum.photos/{width}/{height}?category=nature&landscape=true"
    },
    "Width": 350,
    "Height": 150,
    "SliderWidth": 48,
    "SliderHeight": 48,
    "HoleWidth": 48,
    "HoleHeight": 48,
    "MinX": 0,
    "MaxX": 302,
    "MinY": 0,
    "MaxY": 102,
    "Tolerance": 5,
    "ImageCount": 5
  },
  "Ip": {
    "DbPath": "ip2region.xdb",
    "EnableCache": true,
    "CacheExpiration": 60
  },
  "Mail": {
    "SmtpServer": "smtp.example.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "UserName": "your-email@example.com",
    "Password": "your-password",
    "DefaultFromAddress": "your-email@example.com",
    "DefaultFromName": "Your Name",
    "RetryCount": 3,
    "RetryInterval": 5,
    "Timeout": 30
  },
  "SecuritySettings": {
    "Account": {
      "MaxPasswordErrorCount": 5,
      "LockDuration": 30,
      "ErrorCountResetHours": 24,
      "EnablePermanentLock": true,
      "PermanentLockThreshold": 10,
      "EnableNotification": true,
      "NotificationThreshold": 3
    },
    "Password": {
      "MinLength": 8,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireSpecialChar": true,
      "ExpirationDays": 90,
      "HistoryLimit": 3
    }
  }
}