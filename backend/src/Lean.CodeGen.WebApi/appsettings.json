{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "DbType": 1,
    "ConnectionString": "Server=.;Database=LeanCodeGen_Dev;User Id=sa;Password=Tac26901333.;MultipleActiveResultSets=true;TrustServerCertificate=true;",
    "EnableUnderLine": true,
    "EnableSqlLog": false,
    "EnableAutoMigrate": true,
    "EnableInitData": true
  },
  "Cache": {
    "DefaultExpiration": "01:00:00",
    "EnableRedis": false,
    "KeyPrefix": "lean:",
    "EnableStats": true,
    "EnableCompression": true,
    "CompressionThreshold": 1024,
    "Redis": {
      "ConnectionString": "localhost:6379",
      "Database": 0,
      "PoolSize": 50,
      "ConnectionTimeout": 5000,
      "OperationTimeout": 1000,
      "RetryCount": 3,
      "RetryInterval": 1000,
      "EnableSsl": false,
      "Password": "",
      "AllowAdmin": false,
      "EnableCluster": false
    },
    "Memory": {
      "SizeLimit": 1024,
      "CompactionPercentage": 0.05,
      "ExpirationScanFrequency": 60,
      "EnableSlidingExpiration": true,
      "SlidingExpiration": "00:30:00"
    }
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters",
    "Issuer": "LeanCodeGen",
    "Audience": "LeanCodeGen.WebApi",
    "ExpiresInMinutes": 60
  },
  "Security": {
    "EnableAntiforgery": true,
    "EnableRateLimit": true,
    "EnableSqlInjection": true,
    "DefaultPassword": "123456",
    "Antiforgery": {
      "HeaderName": "X-XSRF-TOKEN",
      "CookieName": "XSRF-TOKEN"
    },
    "RateLimit": {
      "DefaultRateLimit": {
        "Seconds": 60,
        "MaxRequests": 100
      },
      "IpRateLimit": {
        "Seconds": 1,
        "MaxRequests": 10
      },
      "UserRateLimit": {
        "Seconds": 60,
        "MaxRequests": 1000
      },
      "EndpointRateLimits": {
        "/api/auth/login": {
          "Seconds": 60,
          "MaxRequests": 5
        },
        "/api/sms/send": {
          "Seconds": 60,
          "MaxRequests": 1
        }
      },
      "IpWhitelist": [
        "127.0.0.1",
        "::1"
      ],
      "UserWhitelist": [
        "admin",
        "system"
      ]
    },
    "SqlInjection": {
      "BlockedKeywords": [
        "select",
        "insert",
        "update",
        "delete",
        "drop",
        "truncate",
        "exec",
        "execute"
      ]
    }
  },
  "LocalizationSettings": {
    "DefaultLanguage": "zh-CN",
    "SystemLanguage": "zh-CN",
    "EnableAutoDetectLanguage": true,
    "EnableLanguageCookie": true,
    "LanguageCookieName": "lang",
    "LanguageCookieExpireDays": 30
  }
}